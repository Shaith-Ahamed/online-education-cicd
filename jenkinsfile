pipeline {
    agent any

    tools {
        jdk 'jdk17'
        maven 'maven3'
    }

    environment {
        GITHUB_CRED = 'GitHub-Token'       // GitHub credentials
        DOCKERHUB_CRED = 'DockerHub-Token' // DockerHub credentials
        SONAR_CRED = 'SonarQube-Token'     // SonarQube token (Secret Text)
        DOCKER_IMAGE = 'shaith/springboot-cicd' // Docker image name
    }

    stages {
        stage('Code Checkout') {
            steps {
                git branch: 'main',
                    changelog: false,
                    poll: false,
                    url: 'https://github.com/Shaith-Ahamed/online-education-cicd.git',
                    credentialsId: "${GITHUB_CRED}"
            }
        }

        stage('Clean & Compile') {
            steps {
                sh "mvn clean compile"
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withCredentials([string(credentialsId: "${SONAR_CRED}", variable: 'SONAR_TOKEN')]) {
                    sh """
                        mvn sonar:sonar \
                        -Dsonar.host.url=http://localhost:9000 \
                        -Dsonar.token=$SONAR_TOKEN \
                        -Dsonar.java.binaries=target/classes
                    """
                }
            }
        }

        stage('Package') {
            steps {
                sh "mvn package -DskipTests"
            }
        }

        stage('Docker Build & Push') {
            steps {
                script {
                    withDockerRegistry(credentialsId: "${DOCKERHUB_CRED}", url: '') {
                        def buildTag = "${DOCKER_IMAGE}:${BUILD_NUMBER}"
                        def latestTag = "${DOCKER_IMAGE}:latest"

                        // Build Docker image using default Dockerfile
                        sh "docker build -t ${DOCKER_IMAGE} ."
                        sh "docker tag ${DOCKER_IMAGE} ${buildTag}"
                        sh "docker tag ${DOCKER_IMAGE} ${latestTag}"

                        // Push to DockerHub
                        sh "docker push ${buildTag}"
                        sh "docker push ${latestTag}"

                        env.BUILD_TAG = buildTag
                    }
                }
            }
        }

        stage('Staging Deployment') {
            steps {
                sh 'docker compose up -d'
            }
        }
    }

    post {
        always {
            echo 'Cleaning up workspace...'
            cleanWs()
        }
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
